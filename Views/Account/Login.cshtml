@model QuantumStore.Models.ViewModels.LoginViewModel

@{
    // Установка заголовка страницы
    ViewBag.Title = "title";
    // Установка макета страницы
    Layout = "_Layout";
}

<h2>Log In:</h2>
<!-- Отображение сообщения об ошибке -->
<div class="text-danger">@Html.ValidationMessage("Incorrect")</div>
<!-- Ссылка на страницу регистрации -->
<a asp-action="Register">Registration</a>
<!-- Форма входа в систему -->
<form asp-action="Login" method="post" asp-antiforgery="true">
    <div>
        <div class="form-group">
            <!-- Поле для ввода адреса электронной почты -->
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <!-- Поле для ввода пароля -->
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <!-- Кнопка для отправки формы -->
    <button type="submit" class="btn btn-outline-info">Log in</button>
</form>